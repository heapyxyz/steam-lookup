datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  steamId          String         @id @unique @map("steam_id")
  backgroundType   BackgroundType @map("background_type")
  backgroundUrl    String         @map("background_url")
  level            Int?
  timeCreated      Int?           @map("time_created")
  avatarUrl        String         @map("avatar_url")
  avatarFrameUrl   String?        @map("avatar_frame_url")
  longUrl          String         @map("long_url")
  shortUrl         String?        @map("short_url")
  username         String
  vanity           String?
  communityBanned  Boolean        @map("community_banned")
  tradeBanned      Boolean        @map("trade_banned")
  vacBans          Int            @map("vac_bans")
  gameBans         Int            @map("game_bans")
  daysSinceLastBan Int            @map("days_since_last_ban")
  lastUpdated      DateTime       @updatedAt @map("last_updated")

  @@map("profiles")
}

enum BackgroundType {
  Image
  Tiled
  Video

  @@map("background_type")
}
